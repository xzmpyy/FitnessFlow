<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>
    <style name="navigationIconsLinearLayoutStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="navigationTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/navigatorTextSize</item>
        <item name="android:textColor">@color/unSelectedTextColor</item>
        <item name="android:clickable">true</item>
    </style>
    <declare-styleable name="FitCalendarView">
        <!--选择方式，0为单选模式，1位多选模式-->
        <attr name="selectMode" format="integer"/>
    </declare-styleable>
    <style name="muscleGroupNavigator">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/navigatorTextSize</item>
        <item name="android:textColor">@color/unSelectedTextColor</item>
        <item name="android:background">@null</item>
    </style>
</resources>
