<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/viewPaddingVertical"
    android:background="@color/colorPrimary"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/parent_layout"
        android:layout_marginBottom="@dimen/viewMargin"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:textSize="@dimen/navigatorTextSize"
            android:textColor="@color/primaryRed"
            android:textStyle="bold"
            android:background="@null"
            android:layout_marginEnd="@dimen/viewMargin"
            android:id="@+id/cancel_button"
            tools:ignore="ButtonStyle" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirm"
            android:textSize="@dimen/navigatorTextSize"
            android:textColor="@color/primaryGreen"
            android:layout_marginStart="@dimen/viewMargin"
            android:textStyle="bold"
            android:background="@null"
            android:id="@+id/confirm_button"
            tools:ignore="ButtonStyle" />
    </LinearLayout>
</LinearLayout>