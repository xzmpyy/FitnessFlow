<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/transparent_round_rect_background"
    android:layout_marginBottom="@dimen/viewMargin"
    android:id="@+id/item_parent_layout"
    >
    <TextView
        android:layout_width="match_parent"
        android:padding="@dimen/viewPaddingHorizontal"
        style="@style/navigationTextStyle"
        android:text="@string/app_name"
        android:id="@+id/action_name"
        android:singleLine="true"
        android:textAlignment="textStart"
        android:ellipsize="middle"
        android:textColor="@color/primaryTextColor"
        />
    <TextView
        android:layout_width="match_parent"
        android:padding="@dimen/viewPaddingHorizontal"
        style="@style/navigationTextStyle"
        android:text="@string/app_name"
        android:id="@+id/detail_info"
        android:singleLine="true"
        android:textAlignment="textStart"
        android:ellipsize="middle"
        android:textSize="@dimen/smallTextSize"
        android:textColor="@color/primaryGreen"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/data_show"/>
</LinearLayout>