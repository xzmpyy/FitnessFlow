<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/underline_background"
    android:id="@+id/item_parent_layout"
    android:padding="@dimen/viewPaddingVertical"
    android:layout_marginBottom="@dimen/viewMargin"
    >
    <TextView
        android:layout_height="wrap_content"
        style="@style/navigationTextStyle"
        android:text="@string/app_name"
        android:id="@+id/muscle_group_name"
        android:singleLine="true"
        android:ellipsize="middle"
        android:textColor="@color/unSelectedTextColor"
        />
</LinearLayout>