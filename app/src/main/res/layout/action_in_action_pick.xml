<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/underline_background"
    android:id="@+id/item_parent_layout"
    android:padding="@dimen/viewPaddingVertical"
    android:layout_marginBottom="@dimen/viewMargin"
    android:weightSum="1"
    android:gravity="center_vertical"
    >
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:id="@+id/action_name"
        android:singleLine="true"
        android:ellipsize="middle"
        android:textColor="@color/primaryTextColor"
        android:textSize="@dimen/navigatorTextSize"
        />
    <ImageButton
        android:layout_width="@dimen/minButtonWidth"
        android:layout_height="wrap_content"
        android:src="@drawable/add_button_green"
        android:background="@null"
        android:id="@+id/action_add"
        tools:ignore="ContentDescription" />
</LinearLayout>